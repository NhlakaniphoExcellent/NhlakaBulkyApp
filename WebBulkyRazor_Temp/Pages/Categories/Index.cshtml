@page
@model WebBulkyRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3"
        <div class="col-6"
           <h2 class="text-primary">
              Category list
           </h2>
           
        </div>
    <div class="col-6 text-end">
        <a asp-page="/Categories/Create"  class="btn btn-primary">
            Create new Categoy <i class="bi bi-plus-square"></i>
        </a>
    </div>
    </div>

<table class="table table-bordered table-striped">
   <thead>
       <tr>
           <th>
                Category Name
           </th>
           <th>
                Display Order
            </th>
            <th></th>
       </tr>
   </thead>
<tbody>
            @foreach (var objCategoryList in Model.CategoryList.OrderBy(x => x.DisplayOrder))
          {
             <tr>
               <td>@objCategoryList.Name</td>
                  <td>
                     @objCategoryList.DisplayOrder
                  </td>
                  <td>
                      <div class="w-75 btn-group" role="group">
                          <a asp-page="/Categories/edit" asp-route-ID="@objCategoryList.ID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                          </a>
                            <a asp-page="/Categories/delete" asp-route-ID="@objCategoryList.ID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                      </div>

                  </td>
             </tr>
          }
</tbody>
</table>
</div>

